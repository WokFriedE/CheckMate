<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<h1>Sign up</h1>

<%= form_with url: signup_path, local: true do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Create account" %></p>
<% end %>

<p>Already have an account? <%= link_to "Log in", login_path %></p>
