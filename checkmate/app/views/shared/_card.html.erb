<div class="card w-96 bg-base-100 shadow-xl">
  <% if defined?(image_url) && image_url.present? %>
    <figure><img src="<%= image_url %>" alt="<%= title %>"></figure>
  <% end %>
  <div class="card-body">
    <h2 class="card-title"><%= title %></h2>
    <p><%= content %></p>
    <% if defined?(link_url) && link_url.present? %>
      <div class="card-actions justify-end">
        <a href="<%= link_url %>" class="btn btn-primary">Learn More</a>
      </div>
    <% end %>
  </div>
</div>
