<div class="flex flex-col">
	<h1 class="text-2xl">Organizations</h1>

	<div class="gap-2">
		<%= link_to "New Org", new_admin_organization_path, class: 'btn btn-sm btn-primary' %>
		<%= link_to "Org Roles", admin_org_roles_path, class: 'btn btn-sm btn-primary' %>
	</div>

	<div id="organizations">
		<h2 class="text-2xl">Current Orgs</h2>
		<div class="flex flex-wrap flex-col gap-2 mt-2">
			<% @organizations.each do |organization| %>
				<%= link_to admin_organization_path(organization.id) do %>
					<%= render partial: "org_info", locals:{ organization: organization}  %>
				<% end %>
			<% end %>
			<div>
			</div>
		</div>
	</div>