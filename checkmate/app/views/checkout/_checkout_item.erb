<div class="flex flex-col sm:flex-row gap-4 w-full">
  <div class="my-auto">
    <img class="size-fill sm:size-40 rounded-box object-cover " src="<%= item.fetch('imageUrl', '/item_tag.svg') %>"/></div>
  <div class="flex flex-col sm:max-w-1/2">
    <p><%=item['item_name']%></p>
    <p class="text-xs uppercase font-semibold opacity-60 "><%= item['item_comment'] %></p>
  </div>
  <div class="flex flex-col sm:w-1/4 gap-2">
    <label class="label">Count</label>
    <div class="join">
      <input type="number" class="input w-full validator join-item min-w-sm" required 
            placeholder="Count" 
            value="<%=item['count'] || 1%>" 
            min="<%=item[:min]%>" 
            max="<%=50 || item[:max]%>" 
            title="Must be between be <%= item[:min] %> to <%= item[:max] %>" />
      <button class="btn join-item btn-soft btn-error">
        <%= heroicon 'trash', variant: :solid, options: { class: 
        'w-[1em] h-[1em] inline-block' } %>
      </button>
    </div>
  </div>
</div>
<div class="divider"></div>
