<div class="flex flex-col sm:flex-row gap-4 w-full">
  <div class="my-auto">
    <img class="size-fill sm:size-40 rounded-box object-cover " src="<%= item.fetch('imageUrl', '/item_tag.svg') %>"/></div>
  <div class="flex flex-col sm:max-w-1/2">
    <p><%=item['item_name']%></p>
    <p class="text-xs uppercase font-semibold opacity-60 "><%= item['item_comment'] %></p>
  </div>
  <div class="flex flex-col sm:w-1/4 gap-2">
    <label class="label">Count</label>
    <div class="join">
      <input type="number" 
            name="items[<%= index %>][quantity]" 
            data-item-id="<%= item['item_id'] || item['id'] %>" 
            class="input w-full validator join-item min-w-sm" 
            required 
            placeholder="Count" 
            value="<%=item['item_count'] || 1%>" 
            min="<%=item[:min]%>" 
            max="<%=item[:max]%>" 
            title="Must be between <%= item[:min] %> to <%= item[:max] %>" />
      <input type="hidden" name="items[<%= index %>][item_id]" value="<%= item['item_id'] || item['id'] %>" />
