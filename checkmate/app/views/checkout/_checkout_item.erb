      <% unless @already_ordered %>
        <%= button_to organization_delete_checkout_item_path(
		  item['owner_org_id'], 
            item['order_id'], 
            item['item_id'] || item['id']
          ), 
          method: :delete,
          data: { turbo_confirm: 'Remove this item?' },
          type: "button",
          class: "btn join-item btn-soft btn-error" do %>
          <%= heroicon 'trash', variant: :solid, options: { class: 'w-[1em] h-[1em] inline-block' } %>
        <% end %>
      <% end %>
      -->
