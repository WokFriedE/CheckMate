<div role="tablist" class="tabs tabs-box bg-base-100 max-w-fit mx-auto rounded-full shadow-sm">
	<%[:current, :history, :favorites].each do |tab|%>
		<% path = send("#{tab}_orders_path") %>
		<%= link_to  tab.to_s.capitalize ,
              path,
              role: "tab",
              class: "tab shadow-none rounded-full #{'tab-active bg-base-200' if current_page?(path)}" %>
	<%end%>
</div>