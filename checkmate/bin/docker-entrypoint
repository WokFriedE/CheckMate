#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

RAILS_ENV=${RAILS_ENV:-production}

# If running the rails server then create or migrate existing database, then seed
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "Preparing database (migrate + seed) for ${RAILS_ENV}..."
  ./bin/rails db:prepare
  ./bin/rails db:seed
fi

# If running via thrust, also prepare and seed the DB
if [ "${1}" == "./bin/thrust" ]; then
  echo "Preparing database (migrate + seed) for ${RAILS_ENV}..."
  ./bin/rails db:prepare
  ./bin/rails db:seed
fi

exec "${@}"
